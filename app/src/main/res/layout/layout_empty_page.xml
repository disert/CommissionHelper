<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_empty_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_solid_white">
    <View
        android:layout_height="match_parent"
          android:layout_width="1dp"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/icon_recom_empty"/>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_empty_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/color_999999"
                android:text="暂无数据"
                android:textSize="13dp"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_empty_more"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="|"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/color_999999"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/tv_empty_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="查看历史参与>"
                    android:textColor="@color/color_4ed784"
                    android:textSize="12dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_empty_btn"
            android:layout_width="170dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:background="@drawable/bg_solid3_ff5a81"
            android:textColor="@color/white"
            android:text="刷新"
            android:textSize="13dp"/>
    </LinearLayout>
</RelativeLayout>