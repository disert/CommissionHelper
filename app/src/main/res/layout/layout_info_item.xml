<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_solid_white">

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_marginLeft="@dimen/normal_padding_left"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:padding="2dp"
            android:layout_marginRight="7dp"
            android:id="@+id/iv_item_left_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tv_item_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:text="性别"
            android:textSize="13dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/normal_padding_right"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="11dp"
            android:textColor="@color/color_999999"
            android:text="男"/>

        <ImageView
            android:id="@+id/iv_item_right_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_item_right_more"
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/arrow_right_bfbfbf"/>
    </LinearLayout>

    <View
        android:id="@+id/v_item_line"
        android:layout_below="@+id/ll_left"
        style="@style/line_hor"/>
    <View
        android:layout_below="@+id/ll_left"
        android:id="@+id/v_item_space"
        style="@style/space_hor_8"/>
</RelativeLayout>