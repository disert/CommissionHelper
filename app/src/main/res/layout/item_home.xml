<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="140dp"
              android:background="@drawable/bg_solid_white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_item_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/default_img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_item_img"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_shop"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/icon_tmall"/>

                <TextView
                    android:id="@+id/tv_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="宝宝涂色涂鸦【随机8册】+【8蜡笔】"
                    android:textColor="@color/color_333333"
                    android:textSize="13dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_item_yongjin"
                    style="@style/home_goods_item_text"
                    android:text="佣金: ¥4.13"/>

                <TextView
                    android:id="@+id/tv_item_bilv"
                    style="@style/home_goods_item_text"
                    android:layout_alignParentRight="true"
                    android:text="比率: 35%"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_item_zaishou"
                    style="@style/home_goods_item_text"
                    android:text="在售: ¥4.13"/>

                <TextView
                    android:id="@+id/tv_item_xiaoliang"
                    style="@style/home_goods_item_text"
                    android:layout_alignParentRight="true"
                    android:text="销量:5万"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_item_quanhou"
                    style="@style/home_goods_item_text"
                    android:text="券后: ¥4.13"/>

                <TextView
                    android:id="@+id/tv_item_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/color_ff3366"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="15元券"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:textColor="@color/white"
                    android:textSize="10dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_share"
                android:text="我要分享"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bg_solid3_ff573a"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:layout_width="80dp"
                android:layout_height="30dp"/>

        </LinearLayout>
    </RelativeLayout>

    <View style="@style/line_hor_margin10"/>
</LinearLayout>