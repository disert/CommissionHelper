<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_empty_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/def_background"
                android:orientation="vertical">

    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bottom_left"
            android:layout_marginRight="10dp"
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:background="#e2dada"/>

        <TextView
            android:id="@+id/tv_bottom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="没有更多了"
            android:textColor="@color/color_999999"
            android:textSize="12dp"
            />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_bottom_more"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="|"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/color_999999"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/tv_bottom_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="查看历史参与>"
                android:textColor="@color/color_4ed784"
                android:textSize="12dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_bottom_right"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:background="#e2dada"/>
    </LinearLayout>

</RelativeLayout>