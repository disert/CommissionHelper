<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.meishai.commission.helper">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".GlobalContext"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
                  android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.CateActivity"
                  android:launchMode="singleTop"/>
        <activity android:name=".activity.GoodsDetailsActivity"
                  android:launchMode="singleTop"/>
        <activity android:name=".activity.PIDSetActivity"
                  android:launchMode="singleTop"/>
        <activity android:name=".activity.AuthorActivity"
                  android:launchMode="singleTop"/>
        <activity android:name=".activity.BuyVipActivity"
                  android:launchMode="singleTop"/>
        <activity android:name=".activity.SetPhoneActivity"
                  android:launchMode="singleTop"/>
        <activity android:name=".activity.HelpListActivity"
                  android:launchMode="singleTop"/>
    </application>

</manifest>